<body>

<div class="container">
    <h2>My To-Do App</h2>
    <div class="input-section">
        <input type="text" id="taskInput" placeholder="Enter your task">
        <button onclick="addTask()">Add</button>
    </div>

    <h3>Pending Tasks</h3>
    <div id="pendingTasks" class="task-list"></div>

    <h3>Completed Tasks</h3>
    <div id="completedTasks" class="task-list"></div>
</div>

<script>
function addTask() {
    let taskValue = document.getElementById("taskInput").value.trim();
    if (taskValue === "") {
        alert("Please enter a task!");
        return;
    }

    let task = document.createElement("div");
    task.className = "task";

    let taskText = document.createElement("span");
    taskText.innerText = taskValue;

    let dateTime = document.createElement("small");
    dateTime.innerText = "Added: " + new Date().toLocaleString();

    let actions = document.createElement("div");
    actions.className = "actions";

    let completeBtn = document.createElement("button");
    completeBtn.innerText = "âœ”";
    completeBtn.onclick = function () {
        taskText.classList.add("completed");
        dateTime.innerText = "Completed: " + new Date().toLocaleString();
        document.getElementById("completedTasks").appendChild(task);
    };

    let editBtn = document.createElement("button");
    editBtn.innerText = "âœŽ";
    editBtn.onclick = function () {
        let newText = prompt("Edit your task:", taskText.innerText);
        if (newText !== null && newText.trim() !== "") {
            taskText.innerText = newText.trim();
        }
    };

    let deleteBtn = document.createElement("button");
    deleteBtn.innerText = "ðŸ—‘";
    deleteBtn.onclick = function () {
        task.remove();
    };

    actions.appendChild(completeBtn);
    actions.appendChild(editBtn);
    actions.appendChild(deleteBtn);

    let textContainer = document.createElement("div");
    textContainer.appendChild(taskText);
    textContainer.appendChild(dateTime);

    task.appendChild(textContainer);
    task.appendChild(actions);

    document.getElementById("pendingTasks").appendChild(task);
    document.getElementById("taskInput").value = "";
}
</script>

</body>
